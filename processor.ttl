@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix rdfc: <https://w3id.org/rdf-connect#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix sh: <http://www.w3.org/ns/shacl#>.

rdfc:Buffer a owl:Class, rdfs:Class;
  rdfc:jsImplementationOf rdfc:Processor;
  rdfc:file <./lib/index.js>;
  rdfc:class "Buffer";
  rdfc:entrypoint <./>.

[ ] a sh:NodeShape;
  sh:targetClass rdfc:Buffer;
  sh:property [
    sh:class rdfc:Reader;
    sh:path rdfc:incoming;
    sh:name "incoming";
    sh:maxCount 1;
    sh:minCount 1;
  ], [
    sh:class rdfc:Writer;
    sh:path rdfc:outgoing;
    sh:name "outgoing";
    sh:maxCount 1;
    sh:minCount 1;
  ], [
    sh:datatype xsd:integer;
    sh:path rdfc:interval;
    sh:name "interval";
    sh:minCount 0;
    sh:maxCount 1;
  ], [
    sh:datatype xsd:integer;
    sh:path rdfc:amount;
    sh:name "amount";
    sh:minCount 0;
    sh:maxCount 1;
  ], [
    sh:datatype xsd:integer;
    sh:path rdfc:minAmount;
    sh:name "minAmount";
    sh:minCount 0;
    sh:maxCount 1;
  ].

